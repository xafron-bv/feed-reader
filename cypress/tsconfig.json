{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020", "dom"],
    "baseUrl": ".",
    "types": ["cypress", "@testing-library/cypress"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "customConditions": ["react-native"],
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
